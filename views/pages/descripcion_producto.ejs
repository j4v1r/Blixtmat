<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Descripcion Producto</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-KK94CHFLLe+nY2dmCWGMq91rCGa5gtU4mk92HdvYe+M/SXH301p5ILy+dN9+nJOZ" crossorigin="anonymous">
    <link rel="stylesheet" href="css/styles2.css">
</head>
<body>
    
    <%if(tipo==1){%>
        <%- include('../partials/menu-cliente');%>
    <%}else if(tipo==3){%>
        <%- include('../partials/menu-empleado');%>
    <%}else{%>
        <%- include('../partials/menu-admin');%>
    <%}%>

        <div class="container">
            <%respuesta1.forEach((respuesta1)=>{%>
            <h1 class="text-center" style="font-weight: bold;margin-top: 50px;"><%=respuesta1.nombre_producto%></h1>
            <br>
            <br>
            <div class="row">
                <div class="col-md-5">
                    <div class="card">
                        <%if(respuesta1.imagen==null){%>
                            <img src="images/nodisponible.png" />
                        <%}else{%>
                            <img src="https://drive.google.com/uc?export=view&id=<%=respuesta1.imagen%>" />
                        <%}%>
                    </div>
                </div>
                <div class="col-md-7">
                    
                        <h4>Precio por Orden: <%=respuesta1.precio_producto%></h4>
                        <br>
                        <h4>Estado: Disponible</h4>
                        <br>
                        <p><%=respuesta1.descripcion%>
                        </p>
                        <button type="button" class="btn btn-success btn-lg" onclick="location.href='/ordenarProducto/<%=id%>/<%=respuesta1.id_mproducto%>'">Comprar</button>
                        <%})%>
            </div>
        </div>

        <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/js/bootstrap.bundle.min.js" integrity="sha384-ENjdO4Dr2bkBIFxQpeoTz1HIcje39Wm4jDKdf19U8gI4ddQ3GYNS7NTKfAdVQSZe" crossorigin="anonymous"></script> 


        
</body>
</html>