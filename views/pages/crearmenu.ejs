<body>
    <nav>
        <input type="checkbox" id="check">
        <label for="check" class="checkbtn">
            <i class="fas fa-bars"></i>
        </label>
        <a href="#" class="enlace">
            <img src="images/thumbnail.png" alt="" class="logo">
        </a>
        <ul>
            <li><a href="/menudia">MENU DEL DÍA</a></li>
            <li><a href="/crearmenu">DEFINIR MENU</a></li>
            <li><a href="venta.html">VENTAS</a></li>
            <li><a href="/recargar">RECARGAR</a></li>
            <li><a href="inventario.html">INVENTARIO</a></li>

        </ul>
    </nav>
    <form action="/crearmenu" method="post">
        <h2>Menu del día</h2>
        <input type="text" name="entrada" placeholder="Entrada">
        <textarea name="desc_entrada" id="" placeholder="Descripción de la entrada"></textarea>
        <input type="file" name="adjunto" accept=".pdf,.jpg,.png" multiple />


        <input type="text" name="plato_fuerte" placeholder="Plato fuerte">
        <textarea name="desc_plato" id="" placeholder="Descripción del plato fuerte"></textarea>
        <input type="file" name="adjunto" accept=".pdf,.jpg,.png" multiple />


        <input type="text" name="postre" placeholder="Postre">
        <textarea name="desc_postre" id="" placeholder="Descripción del postre"></textarea>
        <input type="file" name="adjunto" accept=".pdf,.jpg,.png" multiple />


        <input type="text" name="bebida" placeholder="Bebida">
        <textarea name="desc_bebida" id="" placeholder="Descripción del postre"></textarea>
        <input type="file" name="adjunto" accept=".pdf,.jpg,.png" multiple />

        <h2>Hora y Precio Menu</h2>
        <input type="number" name="precio_menu" placeholder="Precio (MX)">
        <label>Hora inicio</label>
        <input type="time" name="hora_inicio" >
        <label>Hora final</label>
        <input type="time" name="hora_final" >

        <input type="submit" value="ENVIAR MENU" id="boton">
    </form>


</body>

