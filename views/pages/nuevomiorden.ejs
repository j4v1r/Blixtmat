<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-KK94CHFLLe+nY2dmCWGMq91rCGa5gtU4mk92HdvYe+M/SXH301p5ILy+dN9+nJOZ" crossorigin="anonymous">
    <link rel="stylesheet" href="css/styles2.css" />
    <title>Mi orden</title>
</head>

<body>
    <%- include('../partials/menu-cliente');%>
        <br>

        <section class="pt-5">
            <div class="title p-3 col-md-6">
                <h1 class="display-5 fw-bold">Mis Ordenes</h1>

            </div>
        </section>
        <br>
        <br>
        <br>
        <br>
        <%respuesta0.forEach((respuesta0)=>{%>
            <div class="container">
                <table class="table table-striped-columns">
                    <thead>
                        <tr>
                            <th>Productos</th>
                            <th>Cantidad</th>
                            <th>Precio(Individual)</th>
                            <th>Precio total</th>
                        </tr>
                    </thead>
                    <tbody>
                        <%respuesta.forEach((respuesta)=>{
                            if(respuesta0.id_mcompra==respuesta.id_mcompra){%>
                            <tr>
                                <td data-label="descripcion">
                                    <%=respuesta.nombre_producto%>
                                </td>
                                <td data-label="cantidad">
                                    <%=respuesta.cant_producto%>
                                </td>
                                <td data-label="precio">
                                    <%=respuesta.precio_producto%>
                                </td>
                                <td data-label="precio total">
                                    <%=respuesta.monto_dcarrito%>
                                </td>
                            </tr>
                            <%}else{ } })%>
                                <tr>
                                    <td></td>
                                    <td></td>
                                    <td>Total de orden:</td>
                                    <td>
                                        <%=respuesta0.monto_mcompra%>
                                    </td>
                                </tr>
                    </tbody>
                </table>
            </div>
            <div class="container">
                <table class="table table-striped-columns">

                    <thead>
                        <tr>
                            <th>Datos del cliente</th>
                            <th></th>
                            <th></th>
                            <th>Fecha estimada de entrega</th>

                        </tr>
                    </thead>
                    <tbody>
                        <tr>
                            <td data-label="Consola">Nombre del alumno: <br><br>
                                <%=nombre%>
                            </td>
                            <td data-label="Precio">Boleta/No. Empleado: <br><br>
                                <%=boleta%>
                            </td>
                            <td data-label="Ventas">Tel√©fono: <br><br>
                                <%=celular%>
                            </td>
                            <td data-label="Fecha de lanzamiento">Hora de entrega: <br><br>
                                <%=hora%>
                        <tr>
                            <td></td>
                            <td></td>
                            <td></td>
                            <td data-label="Fecha de lanzamiento">
                                <button type="button" class="btn btn-outline-danger"
                                    onclick="location.href='/cancelarPedido/<%=id_mcompra%>'">Cancelar pedido</button>
                            </td>
                        </tr>
                        </tr>
                    </tbody>
                </table>
            </div>
            <br><br><br><br>
            <%})%>
                <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/js/bootstrap.bundle.min.js"
                    integrity="sha384-ENjdO4Dr2bkBIFxQpeoTz1HIcje39Wm4jDKdf19U8gI4ddQ3GYNS7NTKfAdVQSZe"
                    crossorigin="anonymous"></script>
</body>

</html>